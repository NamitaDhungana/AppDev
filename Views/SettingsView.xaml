<UserControl x:Class="JournalApp.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:JournalApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Settings" Style="{DynamicResource MaterialDesignHeadline4TextBlock}" Margin="0,0,0,24"/>

        <materialDesign:Card Grid.Row="1" VerticalAlignment="Top" Padding="16">
            <StackPanel>
                <TextBlock Text="Appearance" Style="{DynamicResource MaterialDesignSubtitle2TextBlock}" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <TextBlock Text="Dark Mode" VerticalAlignment="Center" Margin="0,0,16,0" Style="{DynamicResource MaterialDesignBody1TextBlock}"/>
                    <ToggleButton IsChecked="{Binding IsDarkMode}" Style="{DynamicResource MaterialDesignSwitchToggleButton}"/>
                </StackPanel>
                
                <Separator Margin="0,8"/>
                
                <TextBlock Text="Security" Style="{DynamicResource MaterialDesignSubtitle2TextBlock}" Margin="0,16,0,8"/>
                <TextBlock Text="Secure your journal with a 4-digit PIN." Style="{DynamicResource MaterialDesignCaptionTextBlock}" Opacity="0.5" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <PasswordBox x:Name="NewPinBox" 
                                 materialDesign:HintAssist.Hint="New 4-Digit PIN" 
                                 Style="{DynamicResource MaterialDesignFloatingHintPasswordBox}" 
                                 Width="150"
                                 PasswordChanged="NewPinBox_PasswordChanged"/>
                    <Button Content="UPDATE" Command="{Binding ChangePinCommand}" Margin="16,0,0,0" Style="{DynamicResource MaterialDesignFlatButton}"/>
                </StackPanel>

                <Separator Margin="0,8"/>

                <TextBlock Text="Advanced (Maintenance)" Style="{DynamicResource MaterialDesignSubtitle2TextBlock}" Margin="0,16,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <Button Content="BACKUP DATA" Command="{Binding BackupCommand}" Style="{DynamicResource MaterialDesignOutlinedButton}" HorizontalAlignment="Left"/>
                    <TextBlock Text="Store a copy of your journal files safely." VerticalAlignment="Center" Margin="16,0,0,0" Style="{DynamicResource MaterialDesignCaptionTextBlock}" Opacity="0.5"/>
                </StackPanel>

                <Border BorderBrush="Red" BorderThickness="1" CornerRadius="4" Padding="16" Margin="0,16,0,0" Background="#10FF0000">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="AlertCircle" Foreground="Red" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Danger Zone" Foreground="Red" FontWeight="Bold" Style="{DynamicResource MaterialDesignSubtitle1TextBlock}"/>
                        </StackPanel>
                        <TextBlock Text="Once you delete your account/data, there is no going back. Please be certain." Style="{DynamicResource MaterialDesignCaptionTextBlock}" Opacity="0.7" Margin="0,0,0,16"/>
                        <Button Content="DELETE ACCOUNT &amp; DATA" 
                                Command="{Binding DeleteAccountCommand}" 
                                Style="{DynamicResource MaterialDesignRaisedButton}" 
                                Background="Red" 
                                BorderBrush="Red" 
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
